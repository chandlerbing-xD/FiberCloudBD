---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Cloud VPS - FiberCloudBD" description="High-performance cloud VPS hosting with dedicated resources and 24/7 support in Dhaka, Bangladesh">
    <Navigation />

    <main class="bg-bg-primary">

        <!-- VPS Pricing Section -->
        <section class="py-20 md:py-28 relative overflow-hidden">

            <!-- Subtle Background Pattern -->
            <div class="absolute inset-0 opacity-30">
                <div class="absolute top-0 right-0 w-96 h-96 bg-accent/10 rounded-full blur-3xl"></div>
                <div class="absolute bottom-0 left-0 w-80 h-80 bg-accent/5 rounded-full blur-3xl"></div>
            </div>

            <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">

                <!-- Page Header -->
                <div class="text-center mb-16">
                    <h1 class="text-4xl md:text-5xl font-bold text-text-primary mb-4">
                        High-Performance Cloud VPS
                    </h1>
                    <p class="text-lg md:text-xl text-text-secondary max-w-3xl mx-auto mb-8">
                        Reliable VPS hosting with dedicated resources, low-latency local infrastructure, and 24/7 support.
                    </p>

                    <!-- What's Included Banner -->
                    <div class="inline-flex items-center gap-2 bg-bg-surface px-6 py-3 rounded-full border border-accent/20">
                        <svg class="w-5 h-5 text-accent" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                        </svg>
                        <span class="text-sm font-semibold text-text-primary">All plans include full root access, weekly backups, unlimited bandwidth & 24/7 support</span>
                    </div>
                </div>

                <!-- VPS Cards Grid -->
                <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6 mb-12">

                    <!-- Card 1: Starter VPS -->
                    <div class="bg-white rounded-2xl border-2 border-gray-200 overflow-hidden hover:shadow-xl hover:border-accent transition-all">
                        <div class="p-6">

                            <!-- Icon -->
                            <div class="w-12 h-12 bg-accent/10 rounded-xl flex items-center justify-center mb-4">
                                <svg class="w-6 h-6 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2m-2-4h.01M17 16h.01"/>
                                </svg>
                            </div>

                            <!-- Plan Name -->
                            <h3 class="text-xl font-bold text-text-primary mb-2">Starter VPS</h3>
                            <p class="text-sm text-text-secondary mb-4">Starter businesses or students</p>

                            <!-- Price -->
                            <div class="mb-6">
                                <span class="text-4xl font-bold text-text-primary">৳999</span>
                                <span class="text-text-secondary">/month</span>
                            </div>

                            <!-- Specs -->
                            <ul class="space-y-2 text-sm">
                                <li class="flex items-center gap-2">
                                    <span class="w-1.5 h-1.5 bg-accent rounded-full"></span>
                                    <span class="text-text-secondary"><strong class="text-text-primary">2 vCPU</strong></span>
                                </li>
                                <li class="flex items-center gap-2">
                                    <span class="w-1.5 h-1.5 bg-accent rounded-full"></span>
                                    <span class="text-text-secondary"><strong class="text-text-primary">2 GB</strong> RAM</span>
                                </li>
                                <li class="flex items-center gap-2">
                                    <span class="w-1.5 h-1.5 bg-accent rounded-full"></span>
                                    <span class="text-text-secondary"><strong class="text-text-primary">80 GB</strong> SSD</span>
                                </li>
                                <li class="flex items-center gap-2">
                                    <span class="w-1.5 h-1.5 bg-accent rounded-full"></span>
                                    <span class="text-text-secondary">Any Linux OS</span>
                                </li>
                                <li class="flex items-center gap-2">
                                    <span class="w-1.5 h-1.5 bg-accent rounded-full"></span>
                                    <span class="text-text-secondary">1 Dedicated IP</span>
                                </li>
                            </ul>

                        </div>
                    </div>

                    <!-- Card 2: Standard VPS -->
                    <div class="bg-white rounded-2xl border-2 border-gray-200 overflow-hidden hover:shadow-xl hover:border-accent transition-all">
                        <div class="p-6">

                            <!-- Icon -->
                            <div class="w-12 h-12 bg-accent/10 rounded-xl flex items-center justify-center mb-4">
                                <svg class="w-6 h-6 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2m-2-4h.01M17 16h.01"/>
                                </svg>
                            </div>

                            <!-- Plan Name -->
                            <h3 class="text-xl font-bold text-text-primary mb-2">Standard VPS</h3>
                            <p class="text-sm text-text-secondary mb-4">Small & medium businesses</p>

                            <!-- Price -->
                            <div class="mb-6">
                                <span class="text-4xl font-bold text-text-primary">৳1,600</span>
                                <span class="text-text-secondary">/month</span>
                            </div>

                            <!-- Specs -->
                            <ul class="space-y-2 text-sm">
                                <li class="flex items-center gap-2">
                                    <span class="w-1.5 h-1.5 bg-accent rounded-full"></span>
                                    <span class="text-text-secondary"><strong class="text-text-primary">4 vCPU</strong></span>
                                </li>
                                <li class="flex items-center gap-2">
                                    <span class="w-1.5 h-1.5 bg-accent rounded-full"></span>
                                    <span class="text-text-secondary"><strong class="text-text-primary">8 GB</strong> RAM</span>
                                </li>
                                <li class="flex items-center gap-2">
                                    <span class="w-1.5 h-1.5 bg-accent rounded-full"></span>
                                    <span class="text-text-secondary"><strong class="text-text-primary">160 GB</strong> SSD</span>
                                </li>
                                <li class="flex items-center gap-2">
                                    <span class="w-1.5 h-1.5 bg-accent rounded-full"></span>
                                    <span class="text-text-secondary">Any Linux OS</span>
                                </li>
                                <li class="flex items-center gap-2">
                                    <span class="w-1.5 h-1.5 bg-accent rounded-full"></span>
                                    <span class="text-text-secondary">1 Dedicated IP</span>
                                </li>
                            </ul>

                        </div>
                    </div>

                    <!-- Card 3: Advance VPS -->
                    <div class="bg-white rounded-2xl border-4 border-accent overflow-hidden shadow-2xl transform scale-105 relative">

                        <!-- Popular Badge -->
                        <div class="absolute top-4 right-4 bg-yellow-400 text-text-primary px-3 py-1 rounded-full text-xs font-bold">
                            BEST VALUE
                        </div>

                        <div class="p-6 bg-gradient-to-b from-orange-50 to-white">

                            <!-- Icon -->
                            <div class="w-12 h-12 bg-accent/20 rounded-xl flex items-center justify-center mb-4">
                                <svg class="w-6 h-6 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2m-2-4h.01M17 16h.01"/>
                                </svg>
                            </div>

                            <!-- Plan Name -->
                            <h3 class="text-xl font-bold text-text-primary mb-2">Advance VPS</h3>
                            <p class="text-sm text-text-secondary mb-4">Power users & growing businesses</p>

                            <!-- Price -->
                            <div class="mb-6">
                                <span class="text-4xl font-bold text-text-primary">৳2,600</span>
                                <span class="text-text-secondary">/year</span>
                            </div>

                            <!-- Specs -->
                            <ul class="space-y-2 text-sm">
                                <li class="flex items-center gap-2">
                                    <span class="w-1.5 h-1.5 bg-accent rounded-full"></span>
                                    <span class="text-text-secondary"><strong class="text-text-primary">8 vCPU</strong></span>
                                </li>
                                <li class="flex items-center gap-2">
                                    <span class="w-1.5 h-1.5 bg-accent rounded-full"></span>
                                    <span class="text-text-secondary"><strong class="text-text-primary">16 GB</strong> RAM</span>
                                </li>
                                <li class="flex items-center gap-2">
                                    <span class="w-1.5 h-1.5 bg-accent rounded-full"></span>
                                    <span class="text-text-secondary"><strong class="text-text-primary">350 GB</strong> SSD</span>
                                </li>
                                <li class="flex items-center gap-2">
                                    <span class="w-1.5 h-1.5 bg-accent rounded-full"></span>
                                    <span class="text-text-secondary">Any Linux OS</span>
                                </li>
                                <li class="flex items-center gap-2">
                                    <span class="w-1.5 h-1.5 bg-accent rounded-full"></span>
                                    <span class="text-text-secondary">1 Dedicated IP</span>
                                </li>
                            </ul>

                        </div>
                    </div>

                    <!-- Card 4: Windows VPS -->
                    <div class="bg-white rounded-2xl border-2 border-blue-200 overflow-hidden hover:shadow-xl hover:border-blue-400 transition-all">
                        <div class="p-6">

                            <!-- Icon -->
                            <div class="w-12 h-12 bg-blue-100 rounded-xl flex items-center justify-center mb-4">
                                <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                                </svg>
                            </div>

                            <!-- Plan Name -->
                            <h3 class="text-xl font-bold text-text-primary mb-2">Windows VPS</h3>
                            <p class="text-sm text-text-secondary mb-4">Windows OS with RDP access</p>

                            <!-- Price -->
                            <div class="mb-6">
                                <span class="text-4xl font-bold text-text-primary">৳1,400</span>
                                <span class="text-text-secondary">/month</span>
                            </div>

                            <!-- Specs -->
                            <ul class="space-y-2 text-sm">
                                <li class="flex items-center gap-2">
                                    <span class="w-1.5 h-1.5 bg-blue-600 rounded-full"></span>
                                    <span class="text-text-secondary"><strong class="text-text-primary">4 vCPU</strong></span>
                                </li>
                                <li class="flex items-center gap-2">
                                    <span class="w-1.5 h-1.5 bg-blue-600 rounded-full"></span>
                                    <span class="text-text-secondary"><strong class="text-text-primary">8 GB</strong> RAM</span>
                                </li>
                                <li class="flex items-center gap-2">
                                    <span class="w-1.5 h-1.5 bg-blue-600 rounded-full"></span>
                                    <span class="text-text-secondary"><strong class="text-text-primary">200 GB</strong> SSD</span>
                                </li>
                                <li class="flex items-center gap-2">
                                    <span class="w-1.5 h-1.5 bg-blue-600 rounded-full"></span>
                                    <span class="text-text-secondary">Any Windows OS</span>
                                </li>
                                <li class="flex items-center gap-2">
                                    <span class="w-1.5 h-1.5 bg-blue-600 rounded-full"></span>
                                    <span class="text-text-secondary">Full Admin & RDP</span>
                                </li>
                            </ul>

                        </div>
                    </div>

                </div>

                <!-- Single CTA Button -->
                <div class="text-center">
                    <a href="/contact" class="inline-block bg-accent hover:bg-accent-hover text-white font-semibold px-10 py-4 rounded-lg transition-all hover:shadow-xl hover:scale-105 text-lg">
                        Talk to Our Team
                    </a>
                    <p class="text-text-secondary mt-3 text-sm">
                        Need help choosing the right VPS plan? We're here to help.
                    </p>
                </div>

            </div>
        </section>

    </main>
    <Footer />
</Layout>