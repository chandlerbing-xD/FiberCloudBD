---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Others - FiberCloudBD" description="Additional services and information from FiberCloudBD">
    <Navigation />

    <main>
        <!-- Hero Section with Dotted Background -->
        <section class="relative overflow-visible bg-bg-secondary py-32 md:py-40">

            <!-- Dotted Pattern Background -->
            <div class="absolute inset-0 opacity-40">
                <div class="absolute top-0 left-0 w-full h-full" style="background-image: radial-gradient(circle at 2px 2px, rgb(217, 118, 66) 1px, transparent 0); background-size: 30px 30px;"></div>
            </div>

            <div class="relative max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
                <!-- Icon -->
                <div class="w-20 h-20 bg-accent/10 rounded-full flex items-center justify-center mx-auto mb-8">
                    <svg class="w-10 h-10 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
                    </svg>
                </div>

                <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6 leading-tight">
                    <span class="text-text-primary">Coming</span>
                    <span class="text-accent block">Soon</span>
                </h1>

                <p class="text-lg md:text-xl text-gray-700 font-medium leading-relaxed mb-8">
                    This page is currently being prepared. We'll be sharing more details about our services and company soon.
                </p>

                <div class="inline-flex items-center gap-2 bg-white px-6 py-3 rounded-full border-2 border-accent/20 shadow-sm">
                    <svg class="w-5 h-5 text-accent animate-pulse" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"/>
                    </svg>
                    <span class="text-sm font-semibold text-text-primary">Stay tuned for updates</span>
                </div>
            </div>
        </section>

        <!-- CTA Section -->
        <section class="py-16 bg-bg-primary">
            <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
                <p class="text-text-secondary mb-6">In the meantime, feel free to explore our other services</p>
                <div class="flex flex-wrap gap-4 justify-center">
                    <a href="/" class="bg-accent hover:bg-accent-hover text-white px-8 py-3 rounded-lg font-semibold transition-all hover:scale-105">
                        View Internet Plans
                    </a>
                    <a href="/contact" class="bg-white hover:bg-gray-50 text-text-primary border-2 border-gray-200 px-8 py-3 rounded-lg font-semibold transition-all hover:scale-105">
                        Contact Us
                    </a>
                </div>
            </div>
        </section>
    </main>

    <Footer />
</Layout>