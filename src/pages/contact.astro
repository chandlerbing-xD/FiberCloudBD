---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Contact Us - FiberCloudBD" description="Get in touch with FiberCloudBD for reliable internet and cloud services in Mugda, Dhaka">
    <Navigation />

    <main class="bg-bg-primary">

        <!-- Contact Section -->
        <section class="py-20 md:py-28 relative overflow-hidden">

            <!-- Subtle Background -->
            <div class="absolute inset-0 opacity-30">
                <div class="absolute top-0 right-0 w-96 h-96 bg-accent/10 rounded-full blur-3xl"></div>
                <div class="absolute bottom-0 left-0 w-80 h-80 bg-accent/5 rounded-full blur-3xl"></div>
            </div>

            <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">

                <!-- Page Header -->
                <div class="text-center mb-16">
                    <h1 class="text-4xl md:text-5xl font-bold text-text-primary mb-4">
                        Get in Touch
                    </h1>
                    <p class="text-lg md:text-xl text-text-secondary max-w-2xl mx-auto">
                        We're local, reachable, and responsive. Let us know how we can help you get connected.
                    </p>
                </div>

                <!-- Contact Grid -->
                <div class="grid lg:grid-cols-2 gap-12 mb-16">

                    <!-- Contact Information -->
                    <div class="space-y-6">

                        <!-- Contact Cards -->
                        <div class="bg-white rounded-2xl p-6 border-2 border-gray-200">
                            <div class="flex items-start gap-4">
                                <div class="w-12 h-12 bg-accent/10 rounded-xl flex items-center justify-center flex-shrink-0">
                                    <svg class="w-6 h-6 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                                    </svg>
                                </div>
                                <div>
                                    <h3 class="font-bold text-text-primary mb-1">Phone</h3>
                                    <p class="text-text-secondary">+880 1XXX-XXXXXX</p>
                                    <p class="text-text-secondary">+880 1XXX-XXXXXX</p>
                                </div>
                            </div>
                        </div>

                        <div class="bg-white rounded-2xl p-6 border-2 border-gray-200">
                            <div class="flex items-start gap-4">
                                <div class="w-12 h-12 bg-green-100 rounded-xl flex items-center justify-center flex-shrink-0">
                                    <svg class="w-6 h-6 text-green-600" fill="currentColor" viewBox="0 0 24 24">
                                        <path d="M.057 24l1.687-6.163c-1.041-1.804-1.588-3.849-1.587-5.946.003-6.556 5.338-11.891 11.893-11.891 3.181.001 6.167 1.24 8.413 3.488 2.245 2.248 3.481 5.236 3.48 8.414-.003 6.557-5.338 11.892-11.893 11.892-1.99-.001-3.951-.5-5.688-1.448l-6.305 1.654zm6.597-3.807c1.676.995 3.276 1.591 5.392 1.592 5.448 0 9.886-4.434 9.889-9.885.002-5.462-4.415-9.89-9.881-9.892-5.452 0-9.887 4.434-9.889 9.884-.001 2.225.651 3.891 1.746 5.634l-.999 3.648 3.742-.981zm11.387-5.464c-.074-.124-.272-.198-.57-.347-.297-.149-1.758-.868-2.031-.967-.272-.099-.47-.149-.669.149-.198.297-.768.967-.941 1.165-.173.198-.347.223-.644.074-.297-.149-1.255-.462-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.297-.347.446-.521.151-.172.2-.296.3-.495.099-.198.05-.372-.025-.521-.075-.148-.669-1.611-.916-2.206-.242-.579-.487-.501-.669-.51l-.57-.01c-.198 0-.52.074-.792.372s-1.04 1.016-1.04 2.479 1.065 2.876 1.213 3.074c.149.198 2.095 3.2 5.076 4.487.709.306 1.263.489 1.694.626.712.226 1.36.194 1.872.118.571-.085 1.758-.719 2.006-1.413.248-.695.248-1.29.173-1.414z"/>
                                    </svg>
                                </div>
                                <div>
                                    <h3 class="font-bold text-text-primary mb-1">WhatsApp</h3>
                                    <p class="text-text-secondary">+880 1XXX-XXXXXX</p>
                                    <a href="#" class="text-accent hover:text-accent-hover font-medium text-sm">Chat with us â†’</a>
                                </div>
                            </div>
                        </div>

                        <div class="bg-white rounded-2xl p-6 border-2 border-gray-200">
                            <div class="flex items-start gap-4">
                                <div class="w-12 h-12 bg-accent/10 rounded-xl flex items-center justify-center flex-shrink-0">
                                    <svg class="w-6 h-6 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                                    </svg>
                                </div>
                                <div>
                                    <h3 class="font-bold text-text-primary mb-1">Email</h3>
                                    <p class="text-text-secondary">info@fibercloudbd.com</p>
                                    <p class="text-text-secondary">support@fibercloudbd.com</p>
                                </div>
                            </div>
                        </div>

                        <div class="bg-white rounded-2xl p-6 border-2 border-gray-200">
                            <div class="flex items-start gap-4">
                                <div class="w-12 h-12 bg-accent/10 rounded-xl flex items-center justify-center flex-shrink-0">
                                    <svg class="w-6 h-6 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                                    </svg>
                                </div>
                                <div>
                                    <h3 class="font-bold text-text-primary mb-1">Service Area</h3>
                                    <p class="text-text-secondary">Mugda, Dhaka - Bangladesh</p>
                                    <p class="text-text-secondary text-sm">Wards: 6, 7, 71, 72</p>
                                </div>
                            </div>
                        </div>

                        <!-- Business Hours -->
                        <div class="bg-accent/5 rounded-2xl p-6 border-2 border-accent/20">
                            <h3 class="font-bold text-text-primary mb-4">Business Hours</h3>
                            <div class="space-y-2 text-sm">
                                <div class="flex justify-between">
                                    <span class="text-text-secondary">Saturday - Thursday</span>
                                    <span class="text-text-primary font-semibold">9:00 AM - 9:00 PM</span>
                                </div>
                                <div class="flex justify-between">
                                    <span class="text-text-secondary">Friday</span>
                                    <span class="text-text-primary font-semibold">2:00 PM - 9:00 PM</span>
                                </div>
                                <div class="mt-4 pt-4 border-t border-accent/20">
                                    <span class="text-accent font-semibold">24/7 Online Support Available</span>
                                </div>
                            </div>
                        </div>

                    </div>

                </div>

            </div>
        </section>

    </main>
    <Footer />
</Layout>