---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Contact Us - FiberCloudBD" description="Get in touch with FiberCloudBD for technical support, sales inquiries, and customer service. Available 24/7.">
    <Navigation />

    <main>

        <!-- Hero Section with Background Image -->
        <section class="relative overflow-hidden py-20 md:py-24">
            <!-- Background Image -->
            <div class="absolute inset-0 z-0">
                <img src="/pavan-trikutam-71CjSSB83Wo-unsplash.jpg" alt="Contact Us" class="w-full h-full object-cover" />
                <div class="absolute inset-0 bg-gradient-to-r from-black/70 via-black/50 to-black/30"></div>
            </div>

            <!-- Dotted Pattern Overlay -->
            <div class="absolute inset-0 opacity-20 z-10">
                <div class="absolute top-0 left-0 w-full h-full" style="background-image: radial-gradient(circle at 2px 2px, rgb(217, 118, 66) 1px, transparent 0); background-size: 30px 30px;"></div>
            </div>

            <div class="relative z-20 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
                <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6 leading-tight text-white">
                    Get in Touch<br/>
                    <span class="text-accent">with Us</span>
                </h1>

                <p class="text-base md:text-lg lg:text-xl text-gray-100 font-medium leading-relaxed max-w-3xl mx-auto">
                    Technical support is our biggest strength. We're here to help with technical issues, service questions, and general support. Choose the easiest way to contact us below.
                </p>
            </div>
        </section>

        <!-- Contact Options Section -->
        <section class="py-20 bg-bg-primary">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">

                <!-- Contact Cards Grid -->
                <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6 mb-16">

                    <!-- Card 1: Technical Support -->
                    <div class="bg-white rounded-2xl p-6 border-2 border-gray-200 hover:border-accent hover:shadow-xl transition-all group">
                        <div class="w-12 h-12 bg-accent/10 rounded-xl flex items-center justify-center mb-4 group-hover:scale-110 transition-transform">
                            <svg class="w-6 h-6 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192l-3.536 3.536M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-5 0a4 4 0 11-8 0 4 4 0 018 0z"/>
                            </svg>
                        </div>
                        <h3 class="text-xl font-bold text-text-primary mb-3">Technical Support</h3>
                        <p class="text-sm text-text-secondary mb-4">
                            Having trouble with your internet connection or service? Our technical support team is available to help you 24/7.
                        </p>

                        <!-- Phone Number - Click to Copy -->
                        <button
                                onclick="copyToClipboard('01715054532', this)"
                                class="w-full bg-gray-50 hover:bg-accent/10 rounded-lg p-4 mb-3 transition-all group/phone cursor-pointer border-2 border-transparent hover:border-accent"
                        >
                            <div class="flex items-center justify-between">
                                <span class="text-xl font-bold text-text-primary group-hover/phone:text-accent transition-colors">
                                    01715054532
                                </span>
                                <svg class="w-5 h-5 text-gray-400 group-hover/phone:text-accent transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"/>
                                </svg>
                            </div>
                            <p class="text-xs text-text-secondary mt-1 text-left">Click to copy</p>
                        </button>

                        <div class="inline-block bg-green-100 text-green-800 px-3 py-1 rounded-full text-xs font-bold">
                            24/7 AVAILABLE
                        </div>
                    </div>

                    <!-- Card 2: Call Us -->
                    <div class="bg-white rounded-2xl p-6 border-2 border-gray-200 hover:border-accent hover:shadow-xl transition-all group">
                        <div class="w-12 h-12 bg-accent/10 rounded-xl flex items-center justify-center mb-4 group-hover:scale-110 transition-transform">
                            <svg class="w-6 h-6 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                            </svg>
                        </div>
                        <h3 class="text-xl font-bold text-text-primary mb-3">Call Us</h3>
                        <p class="text-sm text-text-secondary mb-4">
                            Call us directly for immediate assistance with your internet service or inquiries.
                        </p>

                        <!-- Phone Number - Click to Copy -->
                        <button
                                onclick="copyToClipboard('01911421657', this)"
                                class="w-full bg-gray-50 hover:bg-accent/10 rounded-lg p-4 transition-all group/phone cursor-pointer border-2 border-transparent hover:border-accent"
                        >
                            <div class="flex items-center justify-between">
                                <span class="text-xl font-bold text-text-primary group-hover/phone:text-accent transition-colors">
                                    01911421657
                                </span>
                                <svg class="w-5 h-5 text-gray-400 group-hover/phone:text-accent transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"/>
                                </svg>
                            </div>
                            <p class="text-xs text-text-secondary mt-1 text-left">Click to copy</p>
                        </button>
                    </div>

                    <!-- Card 3: Chat with Us (WhatsApp) -->
                    <a href="https://wa.me/8801911421657" target="_blank" rel="noopener noreferrer" class="bg-white rounded-2xl p-6 border-2 border-gray-200 hover:border-accent hover:shadow-xl transition-all cursor-pointer block group">
                        <div class="w-12 h-12 bg-accent/10 rounded-xl flex items-center justify-center mb-4 group-hover:scale-110 transition-transform">
                            <svg class="w-6 h-6 text-accent" fill="currentColor" viewBox="0 0 24 24">
                                <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
                            </svg>
                        </div>
                        <h3 class="text-xl font-bold text-text-primary mb-3 group-hover:text-accent transition-colors">Chat with Us</h3>
                        <p class="text-sm text-text-secondary mb-4">
                            Chat with our support team on WhatsApp for fast assistance.
                        </p>
                        <div class="text-accent font-semibold text-sm flex items-center gap-2">
                            Open WhatsApp
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
                            </svg>
                        </div>
                    </a>

                    <!-- Card 4: Email Us -->
                    <div class="bg-white rounded-2xl p-6 border-2 border-gray-200 hover:border-accent hover:shadow-xl transition-all group">
                        <div class="w-12 h-12 bg-accent/10 rounded-xl flex items-center justify-center mb-4 group-hover:scale-110 transition-transform">
                            <svg class="w-6 h-6 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                            </svg>
                        </div>
                        <h3 class="text-xl font-bold text-text-primary mb-3">Email Us</h3>
                        <p class="text-sm text-text-secondary mb-4">
                            Reach us anytime via email. Click to copy our email addresses.
                        </p>

                        <!-- Email 1 - Click to Copy -->
                        <button
                                onclick="copyToClipboard('info@fibercloudbd.com', this)"
                                class="w-full bg-gray-50 hover:bg-accent/10 rounded-lg p-3 mb-2 transition-all group/email cursor-pointer border-2 border-transparent hover:border-accent"
                        >
                            <div class="flex items-center justify-between">
                                <span class="text-sm font-semibold text-text-primary group-hover/email:text-accent transition-colors truncate">
                                    info@fibercloudbd.com
                                </span>
                                <svg class="w-4 h-4 text-gray-400 group-hover/email:text-accent transition-colors flex-shrink-0 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"/>
                                </svg>
                            </div>
                        </button>

                        <!-- Email 2 - Click to Copy -->
                        <button
                                onclick="copyToClipboard('support@fibercloudbd.com', this)"
                                class="w-full bg-gray-50 hover:bg-accent/10 rounded-lg p-3 transition-all group/email cursor-pointer border-2 border-transparent hover:border-accent"
                        >
                            <div class="flex items-center justify-between">
                                <span class="text-sm font-semibold text-text-primary group-hover/email:text-accent transition-colors truncate">
                                    support@fibercloudbd.com
                                </span>
                                <svg class="w-4 h-4 text-gray-400 group-hover/email:text-accent transition-colors flex-shrink-0 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"/>
                                </svg>
                            </div>
                        </button>

                        <p class="text-xs text-text-secondary mt-2 text-center">Click to copy</p>
                    </div>

                </div>

                <!-- Visit Us Section -->
                <!-- Visit Us Section -->
                <div class="max-w-5xl mx-auto">
                    <div class="bg-white rounded-2xl p-8 border-2 border-gray-200 shadow-lg">
                        <div class="text-center mb-8">
                            <div class="w-16 h-16 bg-accent/10 rounded-full flex items-center justify-center mx-auto mb-4">
                                <svg class="w-8 h-8 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                                </svg>
                            </div>
                            <h2 class="text-3xl font-bold text-text-primary mb-2">Visit Us</h2>
                            <p class="text-lg text-text-secondary">Come visit our office</p>
                        </div>

                        <div class="grid md:grid-cols-2 gap-8">
                            <!-- Address Info -->
                            <div class="flex flex-col justify-center">
                                <div class="space-y-4">
                                    <div>
                                        <h3 class="font-bold text-text-primary mb-2">OFFICE ADDRESS</h3>
                                        <p class="text-text-secondary">
                                            34 Maniknagar, Mugda<br/>
                                            Dhaka, Bangladesh
                                        </p>
                                    </div>
                                    <a
                                            href="https://maps.app.goo.gl/RJzEdQfiLmWHKLik9"
                                            target="_blank"
                                            rel="noopener noreferrer"
                                            class="inline-flex items-center gap-2 bg-accent hover:bg-accent-hover text-white px-6 py-3 rounded-lg font-semibold transition-all hover:scale-105"
                                    >
                                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7"/>
                                        </svg>
                                        Open in Google Maps
                                    </a>
                                </div>
                            </div>

                            <!-- Google Map Embed -->
                            <div class="rounded-lg overflow-hidden border-2 border-gray-200">
                                <iframe
                                        src="https://www.google.com/maps/embed?pb=!1m17!1m12!1m3!1d3652.412906857547!2d90.42935431498183!3d23.723280884595947!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m2!1m1!2zMjPCsDQzJzIzLjgiTiA5MMKwMjUnNTMuNSJF!5e0!3m2!1sen!2sbd!4v1234567890123!5m2!1sen!2sbd"
                                        width="100%"
                                        height="300"
                                        style="border:0;"
                                        allowfullscreen=""
                                        loading="lazy"
                                        referrerpolicy="no-referrer-when-downgrade"
                                        title="FiberCloudBD Office Location"
                                ></iframe>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </section>

    </main>

    <Footer />

    <script>
        function copyToClipboard(text, button) {
            navigator.clipboard.writeText(text).then(() => {
                // Show success feedback
                const originalHTML = button.innerHTML;
                button.innerHTML = '<span class="text-green-600 font-bold">âœ“ Copied!</span>';

                setTimeout(() => {
                    button.innerHTML = originalHTML;
                }, 2000);
            }).catch(err => {
                console.error('Failed to copy:', err);
                alert('Failed to copy. Please try again.');
            });
        }
    </script>
</Layout>