---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Internet Plans - FiberCloudBD">
    <Navigation />

    <main>

        <!-- Hero Section -->
        <section class="relative overflow-visible bg-bg-secondary py-14 md:py-18">

            <!-- Dotted Pattern Background -->
            <div class="absolute inset-0 opacity-40">
                <div class="absolute top-0 left-0 w-full h-full" style="background-image: radial-gradient(circle at 2px 2px, rgb(217, 118, 66) 1px, transparent 0); background-size: 30px 30px;"></div>
            </div>

            <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">

                <!-- 50/50 Layout -->
                <div class="flex flex-col lg:flex-row gap-12 lg:gap-16 items-center">

                    <!-- LEFT: Text -->
                    <div class="flex-1 w-full">

                      <!--  <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-text-primary mb-6 leading-tight tracking-tight">
                            Introducing internet plans designed for your lifestyle.
                        </h1>  -->
                        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6 leading-tight">
                            <span class="text-text-primary">Introducing internet plans</span>
                            <span class="text-accent block">designed for your lifestyle.</span>
                        </h1>

                        <p class="text-base md:text-lg lg:text-xl text-gray-700 font-medium leading-relaxed">
                        Fast, stable, and affordable broadband designed for homes, professionals, and enterprises across Bangladesh.
                        </p>
                        <div class="mt-8 flex flex-col sm:flex-row gap-4">
                            <!-- Home Plans -->
                            <a
                                    href="#home-plans"
                                    class="inline-flex items-center justify-center px-8 py-4 rounded-lg bg-accent text-white font-semibold text-base hover:bg-accent-hover transition shadow-md"
                            >
                                Home Plans
                            </a>

                            <!-- Business Plans -->
                            <a
                                    href="#business-plans"
                                    class="inline-flex items-center justify-center px-8 py-4 rounded-lg border-2 border-accent text-accent font-semibold text-base hover:bg-accent hover:text-white transition"
                            >
                                Custom Plans for Business
                            </a>
                        </div>

                    </div>

                    <!-- RIGHT: Illustration Container -->
                    <div class="relative w-[380px] h-[300px]">

                        <svg viewBox="0 0 400 260" class="w-full h-full">
                            <!-- arcs -->
                            <path d="M60 200 A140 140 0 0 1 160 70"
                                  fill="none" stroke="#F6C27A" stroke-width="18" stroke-linecap="round"/>
                            <path d="M160 70 A140 140 0 0 1 240 70"
                                  fill="none" stroke="#D97642" stroke-width="18" stroke-linecap="round"/>
                            <path d="M240 70 A140 140 0 0 1 340 200"
                                  fill="none" stroke="#B4532A" stroke-width="18" stroke-linecap="round"/>

                            <!-- needle -->
                            <line x1="200" y1="200" x2="265" y2="115"
                                  stroke="#2D2D2D" stroke-width="4" stroke-linecap="round"/>
                            <circle cx="200" cy="200" r="6" fill="#2D2D2D"/>
                        </svg>

                        <!-- STUDENT -->
                        <div class="absolute left-[10px] bottom-[20px] text-center w-[100px]">
                            <div class="text-sm font-bold">30 Mbps</div>
                            <div class="text-[11px] text-gray-500">Students & Individuals</div>
                        </div>

                        <!-- FAMILY -->
                        <div class="absolute left-1/2 -translate-x-1/2 top-[8px] text-center w-[120px]">
                            <div class="text-sm font-bold">50 Mbps</div>
                            <div class="text-[11px] text-gray-500">Family Use</div>
                        </div>

                        <!-- GAMER -->
                        <div class="absolute right-[10px] bottom-[20px] text-center w-[100px]">
                            <div class="text-sm font-bold">100 Mbps</div>
                            <div class="text-[11px] text-gray-500">Gaming & Streaming</div>
                        </div>

                    </div>


                </div>
            </div>
        </section>

        <!-- Placeholder -->
        <!-- Pricing Cards Section - REPLACE THE PLACEHOLDER WITH THIS -->
        <section id="home-plans" class="py-20 bg-bg-primary">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">

                <!-- Section Header -->
                <div class="text-center mb-16">
                    <h2 class="text-3xl sm:text-4xl font-bold text-text-primary mb-4">
                        Choose Your Speed
                    </h2>
                    <p class="text-lg text-text-secondary">
                        All plans include unlimited data, optimized routing, and 24/7 local support.
                    </p>
                </div>

                <!-- Pricing Cards Grid - Using inline styles for guaranteed layout -->
                <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 320px)); gap: 1.5rem; justify-content: center; margin-bottom: 3rem;">

                    <!-- Card 1: 20 Mbps Essential -->
                    <div style="background: white; border-radius: 1rem; padding: 2rem; border: 2px solid transparent; transition: all 0.3s;">
                        <!-- Icon -->
                        <div style="text-align: center; margin-bottom: 1.5rem;">
                            <svg style="width: 4rem; height: 4rem; color: #D97642; margin: 0 auto;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                            </svg>
                        </div>

                        <!-- Speed -->
                        <div style="text-align: center; margin-bottom: 1rem;">
                            <div style="font-size: 3rem; font-weight: bold; color: #2D2D2D;">
                                20 <span style="font-size: 1.5rem;">Mbps</span>
                            </div>
                            <div style="font-size: 1.125rem; font-weight: 500; color: #2D2D2D; margin-top: 0.5rem;">
                                Essential
                            </div>
                        </div>

                        <!-- Price -->
                        <div style="text-align: center; margin-bottom: 1rem;">
                            <div style="font-size: 1.875rem; font-weight: bold; color: #2D2D2D;">
                                ৳500<span style="font-size: 1.125rem; font-weight: normal; color: #6B6B6B;">/month</span>
                            </div>
                        </div>

                        <!-- Tagline -->
                        <p style="text-align: center; color: #6B6B6B; margin-bottom: 1.5rem; font-size: 0.875rem;">
                            Best for students and individual users
                        </p>

                        <!-- Features List -->
                        <ul style="list-style: none; padding: 0; margin: 0;">
                            <li style="display: flex; gap: 0.5rem; margin-bottom: 0.5rem; color: #6B6B6B; font-size: 0.875rem;">
                                <svg style="width: 1rem; height: 1rem; color: #D97642; flex-shrink: 0; margin-top: 0.25rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                                </svg>
                                <span>HD streaming</span>
                            </li>
                            <li style="display: flex; gap: 0.5rem; margin-bottom: 0.5rem; color: #6B6B6B; font-size: 0.875rem;">
                                <svg style="width: 1rem; height: 1rem; color: #D97642; flex-shrink: 0; margin-top: 0.25rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                                </svg>
                                <span>Online classes & video calls</span>
                            </li>
                            <li style="display: flex; gap: 0.5rem; margin-bottom: 0.5rem; color: #6B6B6B; font-size: 0.875rem;">
                                <svg style="width: 1rem; height: 1rem; color: #D97642; flex-shrink: 0; margin-top: 0.25rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                                </svg>
                                <span>Email, browsing, and cloud apps</span>
                            </li>
                            <li style="display: flex; gap: 0.5rem; color: #6B6B6B; font-size: 0.875rem;">
                                <svg style="width: 1rem; height: 1rem; color: #D97642; flex-shrink: 0; margin-top: 0.25rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                                </svg>
                                <span>1–2 connected devices</span>
                            </li>
                        </ul>
                    </div>

                    <!-- Card 2: 30 Mbps Smart Home (POPULAR) -->
                    <div style="background: white; border-radius: 1rem; padding: 2rem; border: 2px solid #D97642; transition: all 0.3s; position: relative;">
                        <!-- Popular Badge -->
                        <div style="position: absolute; top: -0.75rem; left: 50%; transform: translateX(-50%); background: #D97642; color: white; font-size: 0.75rem; font-weight: bold; padding: 0.25rem 1rem; border-radius: 9999px;">
                            POPULAR
                        </div>

                        <!-- Icon -->
                        <div style="text-align: center; margin-bottom: 1.5rem;">
                            <svg style="width: 4rem; height: 4rem; color: #D97642; margin: 0 auto;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                            </svg>
                        </div>

                        <!-- Speed -->
                        <div style="text-align: center; margin-bottom: 1rem;">
                            <div style="font-size: 3rem; font-weight: bold; color: #2D2D2D;">
                                30 <span style="font-size: 1.5rem;">Mbps</span>
                            </div>
                            <div style="font-size: 1.125rem; font-weight: 500; color: #2D2D2D; margin-top: 0.5rem;">
                                Smart Home
                            </div>
                        </div>

                        <!-- Price -->
                        <div style="text-align: center; margin-bottom: 1rem;">
                            <div style="font-size: 1.875rem; font-weight: bold; color: #2D2D2D;">
                                ৳750<span style="font-size: 1.125rem; font-weight: normal; color: #6B6B6B;">/month</span>
                            </div>
                        </div>

                        <!-- Tagline -->
                        <p style="text-align: center; color: #6B6B6B; margin-bottom: 1.5rem; font-size: 0.875rem;">
                            Ideal for families and remote professionals
                        </p>

                        <!-- Features List -->
                        <ul style="list-style: none; padding: 0; margin: 0;">
                            <li style="display: flex; gap: 0.5rem; margin-bottom: 0.5rem; color: #6B6B6B; font-size: 0.875rem;">
                                <svg style="width: 1rem; height: 1rem; color: #D97642; flex-shrink: 0; margin-top: 0.25rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                                </svg>
                                <span>HD & 4K streaming</span>
                            </li>
                            <li style="display: flex; gap: 0.5rem; margin-bottom: 0.5rem; color: #6B6B6B; font-size: 0.875rem;">
                                <svg style="width: 1rem; height: 1rem; color: #D97642; flex-shrink: 0; margin-top: 0.25rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                                </svg>
                                <span>Multiple devices online</span>
                            </li>
                            <li style="display: flex; gap: 0.5rem; margin-bottom: 0.5rem; color: #6B6B6B; font-size: 0.875rem;">
                                <svg style="width: 1rem; height: 1rem; color: #D97642; flex-shrink: 0; margin-top: 0.25rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                                </svg>
                                <span>Stable work-from-home setup</span>
                            </li>
                            <li style="display: flex; gap: 0.5rem; color: #6B6B6B; font-size: 0.875rem;">
                                <svg style="width: 1rem; height: 1rem; color: #D97642; flex-shrink: 0; margin-top: 0.25rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                                </svg>
                                <span>Faster downloads & uploads</span>
                            </li>
                        </ul>
                    </div>

                    <!-- Card 3: 40 Mbps Power User -->
                    <div style="background: white; border-radius: 1rem; padding: 2rem; border: 2px solid transparent; transition: all 0.3s;">
                        <!-- Icon -->
                        <div style="text-align: center; margin-bottom: 1.5rem;">
                            <svg style="width: 4rem; height: 4rem; color: #D97642; margin: 0 auto;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                            </svg>
                        </div>

                        <!-- Speed -->
                        <div style="text-align: center; margin-bottom: 1rem;">
                            <div style="font-size: 3rem; font-weight: bold; color: #2D2D2D;">
                                40 <span style="font-size: 1.5rem;">Mbps</span>
                            </div>
                            <div style="font-size: 1.125rem; font-weight: 500; color: #2D2D2D; margin-top: 0.5rem;">
                                Power User
                            </div>
                        </div>

                        <!-- Price -->
                        <div style="text-align: center; margin-bottom: 1rem;">
                            <div style="font-size: 1.875rem; font-weight: bold; color: #2D2D2D;">
                                ৳900<span style="font-size: 1.125rem; font-weight: normal; color: #6B6B6B;">/month</span>
                            </div>
                        </div>

                        <!-- Tagline -->
                        <p style="text-align: center; color: #6B6B6B; margin-bottom: 1.5rem; font-size: 0.875rem;">
                            Built for gamers, creators, and home offices
                        </p>

                        <!-- Features List -->
                        <ul style="list-style: none; padding: 0; margin: 0;">
                            <li style="display: flex; gap: 0.5rem; margin-bottom: 0.5rem; color: #6B6B6B; font-size: 0.875rem;">
                                <svg style="width: 1rem; height: 1rem; color: #D97642; flex-shrink: 0; margin-top: 0.25rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                                </svg>
                                <span>Multi-device 4K streaming</span>
                            </li>
                            <li style="display: flex; gap: 0.5rem; margin-bottom: 0.5rem; color: #6B6B6B; font-size: 0.875rem;">
                                <svg style="width: 1rem; height: 1rem; color: #D97642; flex-shrink: 0; margin-top: 0.25rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                                </svg>
                                <span>Low-latency gaming</span>
                            </li>
                            <li style="display: flex; gap: 0.5rem; margin-bottom: 0.5rem; color: #6B6B6B; font-size: 0.875rem;">
                                <svg style="width: 1rem; height: 1rem; color: #D97642; flex-shrink: 0; margin-top: 0.25rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                                </svg>
                                <span>Large downloads & backups</span>
                            </li>
                            <li style="display: flex; gap: 0.5rem; color: #6B6B6B; font-size: 0.875rem;">
                                <svg style="width: 1rem; height: 1rem; color: #D97642; flex-shrink: 0; margin-top: 0.25rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                                </svg>
                                <span>Seamless work + entertainment</span>
                            </li>
                        </ul>
                    </div>

                </div>

                <!-- Single CTA for Residential Plans -->
                <div class="text-center mb-16">
                    <a
                            href="/contact"
                            target="_blank"
                            rel="noopener noreferrer"
                            class="inline-block bg-accent hover:bg-accent-hover text-white px-10 py-4 rounded-lg font-medium text-lg transition-all shadow-lg hover:shadow-xl"
                    >
                        Talk to Our Team
                    </a>
                    <p class="text-text-secondary mt-3 text-sm">
                        We'll help you choose the right plan.
                    </p>
                </div>

                <!-- Spacing Before Business Card -->
                <div class="mb-12"></div>

                <!-- Business / Corporate Card - Vertical Style -->
                <div id="business-plans" class="max-w-2xl mx-auto">
                    <div style="background: white; border-radius: 1rem; padding: 2rem; border: 2px solid rgba(217, 118, 66, 0.3); box-shadow: 0 10px 25px rgba(0,0,0,0.1);">

                        <!-- Icon -->
                        <div style="text-align: center; margin-bottom: 1.5rem;">
                            <svg style="width: 4rem; height: 4rem; color: #D97642; margin: 0 auto;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                            </svg>
                        </div>

                        <!-- Title -->
                        <div style="text-align: center; margin-bottom: 1rem;">
                            <h3 style="font-size: 1.875rem; font-weight: bold; color: #2D2D2D; margin-bottom: 0.5rem;">
                                Corporate, Business &<br/>Apartments Internet
                            </h3>
                            <p style="font-size: 1.25rem; color: #D97642; font-weight: 600;">
                                Custom Pricing — Call for Details
                            </p>
                        </div>

                        <!-- Description -->
                        <p style="text-align: center; color: #6B6B6B; margin-bottom: 1.5rem; font-size: 0.875rem;">
                            Designed for offices, enterprises, and mission-critical operations
                        </p>

                        <!-- Features List - 2 Columns -->
                        <div style="display: grid; grid-template-columns: repeat(2, 1fr); gap: 0.75rem; margin-bottom: 2rem;">
                            <div style="display: flex; gap: 0.5rem; font-size: 0.875rem;">
                                <svg style="width: 1rem; height: 1rem; color: #D97642; flex-shrink: 0; margin-top: 0.25rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                                </svg>
                                <span style="color: #6B6B6B;">Dedicated or guaranteed bandwidth</span>
                            </div>
                            <div style="display: flex; gap: 0.5rem; font-size: 0.875rem;">
                                <svg style="width: 1rem; height: 1rem; color: #D97642; flex-shrink: 0; margin-top: 0.25rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                                </svg>
                                <span style="color: #6B6B6B;">SLA-backed uptime</span>
                            </div>
                            <div style="display: flex; gap: 0.5rem; font-size: 0.875rem;">
                                <svg style="width: 1rem; height: 1rem; color: #D97642; flex-shrink: 0; margin-top: 0.25rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                                </svg>
                                <span style="color: #6B6B6B;">Static / public IP addresses</span>
                            </div>
                            <div style="display: flex; gap: 0.5rem; font-size: 0.875rem;">
                                <svg style="width: 1rem; height: 1rem; color: #D97642; flex-shrink: 0; margin-top: 0.25rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                                </svg>
                                <span style="color: #6B6B6B;">Priority routing & traffic management</span>
                            </div>
                            <div style="display: flex; gap: 0.5rem; font-size: 0.875rem;">
                                <svg style="width: 1rem; height: 1rem; color: #D97642; flex-shrink: 0; margin-top: 0.25rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                                </svg>
                                <span style="color: #6B6B6B;">Business-grade support & monitoring</span>
                            </div>
                            <div style="display: flex; gap: 0.5rem; font-size: 0.875rem;">
                                <svg style="width: 1rem; height: 1rem; color: #D97642; flex-shrink: 0; margin-top: 0.25rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                                </svg>
                                <span style="color: #6B6B6B;">Custom network design</span>
                            </div>
                        </div>

                        <!-- CTA Button -->
                        <div style="text-align: center;">
                            <a
                                    href="/contact"
                                    style="display: inline-block; background: #D97642; color: white; padding: 1rem 2rem; border-radius: 0.5rem; font-weight: 600; font-size: 1.125rem; text-decoration: none; box-shadow: 0 4px 6px rgba(0,0,0,0.1); transition: all 0.3s;"
                            >
                                Request Custom Quote
                            </a>
                            <p style="margin-top: 0.75rem; font-size: 0.875rem; color: #6B6B6B;">
                                Our team will design a solution for your business.
                            </p>
                        </div>

                    </div>
                </div>

            </div>
        </section>

    </main>
    <Footer />
</Layout>