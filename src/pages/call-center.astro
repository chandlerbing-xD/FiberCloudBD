---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Call Center & Cloud PBX - FiberCloudBD" description="Reliable voice infrastructure for call centers, sales teams, and support desks with local hosting and 24/7 support">
    <Navigation />

    <main class="bg-bg-primary">

        <!-- Call Center Pricing Section -->
        <section class="py-20 md:py-28 relative overflow-hidden">

            <!-- Subtle Background Pattern -->
            <div class="absolute inset-0 opacity-30">
                <div class="absolute top-0 right-0 w-96 h-96 bg-accent/10 rounded-full blur-3xl"></div>
                <div class="absolute bottom-0 left-0 w-80 h-80 bg-accent/5 rounded-full blur-3xl"></div>
            </div>

            <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">

                <!-- Page Header -->
                <div class="text-center mb-16">
                    <h1 class="text-4xl md:text-5xl font-bold text-text-primary mb-4">
                        Call Center & Cloud PBX
                    </h1>
                    <p class="text-lg md:text-xl text-text-secondary max-w-3xl mx-auto mb-8">
                        Reliable voice infrastructure for growing businesses. Modern cloud-based calling solutions built for customer-facing teams.
                    </p>

                    <!-- What's Included Banner -->
                    <div class="inline-flex items-center gap-2 bg-bg-surface px-6 py-3 rounded-full border border-accent/20">
                        <svg class="w-5 h-5 text-accent" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                        </svg>
                        <span class="text-sm font-semibold text-text-primary">All plans include call routing, IVR, call recording & scalable extensions</span>
                    </div>
                </div>

                <!-- Features Grid -->
                <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6 mb-12">

                    <!-- Feature 1: Cloud PBX -->
                    <div class="bg-white rounded-2xl border-2 border-gray-200 overflow-hidden hover:shadow-xl hover:border-accent transition-all">
                        <div class="p-6">

                            <!-- Icon -->
                            <div class="w-12 h-12 bg-accent/10 rounded-xl flex items-center justify-center mb-4">
                                <svg class="w-6 h-6 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                                </svg>
                            </div>

                            <!-- Feature Name -->
                            <h3 class="text-xl font-bold text-text-primary mb-2">Cloud PBX</h3>
                            <p class="text-sm text-text-secondary mb-4">Complete phone system in the cloud</p>

                            <!-- Description -->
                            <ul class="space-y-2 text-sm">
                                <li class="flex items-start gap-2">
                                    <span class="w-1.5 h-1.5 bg-accent rounded-full mt-1.5 flex-shrink-0"></span>
                                    <span class="text-text-secondary">Virtual phone system</span>
                                </li>
                                <li class="flex items-start gap-2">
                                    <span class="w-1.5 h-1.5 bg-accent rounded-full mt-1.5 flex-shrink-0"></span>
                                    <span class="text-text-secondary">No hardware required</span>
                                </li>
                                <li class="flex items-start gap-2">
                                    <span class="w-1.5 h-1.5 bg-accent rounded-full mt-1.5 flex-shrink-0"></span>
                                    <span class="text-text-secondary">Works from anywhere</span>
                                </li>
                                <li class="flex items-start gap-2">
                                    <span class="w-1.5 h-1.5 bg-accent rounded-full mt-1.5 flex-shrink-0"></span>
                                    <span class="text-text-secondary">Easy to scale</span>
                                </li>
                            </ul>

                        </div>
                    </div>

                    <!-- Feature 2: Call Routing & IVR -->
                    <div class="bg-white rounded-2xl border-2 border-gray-200 overflow-hidden hover:shadow-xl hover:border-accent transition-all">
                        <div class="p-6">

                            <!-- Icon -->
                            <div class="w-12 h-12 bg-accent/10 rounded-xl flex items-center justify-center mb-4">
                                <svg class="w-6 h-6 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4"/>
                                </svg>
                            </div>

                            <!-- Feature Name -->
                            <h3 class="text-xl font-bold text-text-primary mb-2">Call Routing & IVR</h3>
                            <p class="text-sm text-text-secondary mb-4">Smart call management system</p>

                            <!-- Description -->
                            <ul class="space-y-2 text-sm">
                                <li class="flex items-start gap-2">
                                    <span class="w-1.5 h-1.5 bg-accent rounded-full mt-1.5 flex-shrink-0"></span>
                                    <span class="text-text-secondary">Intelligent call routing</span>
                                </li>
                                <li class="flex items-start gap-2">
                                    <span class="w-1.5 h-1.5 bg-accent rounded-full mt-1.5 flex-shrink-0"></span>
                                    <span class="text-text-secondary">Custom IVR menus</span>
                                </li>
                                <li class="flex items-start gap-2">
                                    <span class="w-1.5 h-1.5 bg-accent rounded-full mt-1.5 flex-shrink-0"></span>
                                    <span class="text-text-secondary">Queue management</span>
                                </li>
                                <li class="flex items-start gap-2">
                                    <span class="w-1.5 h-1.5 bg-accent rounded-full mt-1.5 flex-shrink-0"></span>
                                    <span class="text-text-secondary">Call forwarding</span>
                                </li>
                            </ul>

                        </div>
                    </div>

                    <!-- Feature 3: Call Recording -->
                    <div class="bg-white rounded-2xl border-4 border-accent overflow-hidden shadow-2xl transform scale-105 relative">

                        <!-- Popular Badge -->
                        <div class="absolute top-4 right-4 bg-yellow-400 text-text-primary px-3 py-1 rounded-full text-xs font-bold">
                            POPULAR
                        </div>

                        <div class="p-6 bg-gradient-to-b from-orange-50 to-white">

                            <!-- Icon -->
                            <div class="w-12 h-12 bg-accent/20 rounded-xl flex items-center justify-center mb-4">
                                <svg class="w-6 h-6 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11a7 7 0 01-7 7m0 0a7 7 0 01-7-7m7 7v4m0 0H8m4 0h4m-4-8a3 3 0 01-3-3V5a3 3 0 116 0v6a3 3 0 01-3 3z"/>
                                </svg>
                            </div>

                            <!-- Feature Name -->
                            <h3 class="text-xl font-bold text-text-primary mb-2">Call Recording</h3>
                            <p class="text-sm text-text-secondary mb-4">Secure call recording & storage</p>

                            <!-- Description -->
                            <ul class="space-y-2 text-sm">
                                <li class="flex items-start gap-2">
                                    <span class="w-1.5 h-1.5 bg-accent rounded-full mt-1.5 flex-shrink-0"></span>
                                    <span class="text-text-secondary">Automatic recording</span>
                                </li>
                                <li class="flex items-start gap-2">
                                    <span class="w-1.5 h-1.5 bg-accent rounded-full mt-1.5 flex-shrink-0"></span>
                                    <span class="text-text-secondary">Local storage</span>
                                </li>
                                <li class="flex items-start gap-2">
                                    <span class="w-1.5 h-1.5 bg-accent rounded-full mt-1.5 flex-shrink-0"></span>
                                    <span class="text-text-secondary">Quality assurance</span>
                                </li>
                                <li class="flex items-start gap-2">
                                    <span class="w-1.5 h-1.5 bg-accent rounded-full mt-1.5 flex-shrink-0"></span>
                                    <span class="text-text-secondary">Training purposes</span>
                                </li>
                            </ul>

                        </div>
                    </div>

                    <!-- Feature 4: Scalable Extensions -->
                    <div class="bg-white rounded-2xl border-2 border-gray-200 overflow-hidden hover:shadow-xl hover:border-accent transition-all">
                        <div class="p-6">

                            <!-- Icon -->
                            <div class="w-12 h-12 bg-accent/10 rounded-xl flex items-center justify-center mb-4">
                                <svg class="w-6 h-6 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
                                </svg>
                            </div>

                            <!-- Feature Name -->
                            <h3 class="text-xl font-bold text-text-primary mb-2">Scalable Extensions</h3>
                            <p class="text-sm text-text-secondary mb-4">Grow as your team grows</p>

                            <!-- Description -->
                            <ul class="space-y-2 text-sm">
                                <li class="flex items-start gap-2">
                                    <span class="w-1.5 h-1.5 bg-accent rounded-full mt-1.5 flex-shrink-0"></span>
                                    <span class="text-text-secondary">Unlimited extensions</span>
                                </li>
                                <li class="flex items-start gap-2">
                                    <span class="w-1.5 h-1.5 bg-accent rounded-full mt-1.5 flex-shrink-0"></span>
                                    <span class="text-text-secondary">Easy management</span>
                                </li>
                                <li class="flex items-start gap-2">
                                    <span class="w-1.5 h-1.5 bg-accent rounded-full mt-1.5 flex-shrink-0"></span>
                                    <span class="text-text-secondary">Distributed teams</span>
                                </li>
                                <li class="flex items-start gap-2">
                                    <span class="w-1.5 h-1.5 bg-accent rounded-full mt-1.5 flex-shrink-0"></span>
                                    <span class="text-text-secondary">Remote agents</span>
                                </li>
                            </ul>

                        </div>
                    </div>

                </div>

                <!-- Ideal For Section -->
                <div class="bg-white rounded-2xl p-8 mb-12 border-2 border-gray-200">
                    <h2 class="text-2xl font-bold text-text-primary text-center mb-8">Ideal For</h2>

                    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
                        <div class="text-center">
                            <div class="w-16 h-16 bg-accent/10 rounded-full flex items-center justify-center mx-auto mb-3">
                                <svg class="w-8 h-8 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
                                </svg>
                            </div>
                            <h3 class="font-semibold text-text-primary">Call Centers</h3>
                        </div>

                        <div class="text-center">
                            <div class="w-16 h-16 bg-accent/10 rounded-full flex items-center justify-center mx-auto mb-3">
                                <svg class="w-8 h-8 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                </svg>
                            </div>
                            <h3 class="font-semibold text-text-primary">Sales Teams</h3>
                        </div>

                        <div class="text-center">
                            <div class="w-16 h-16 bg-accent/10 rounded-full flex items-center justify-center mx-auto mb-3">
                                <svg class="w-8 h-8 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192l-3.536 3.536M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-5 0a4 4 0 11-8 0 4 4 0 018 0z"/>
                                </svg>
                            </div>
                            <h3 class="font-semibold text-text-primary">Support Desks</h3>
                        </div>

                        <div class="text-center">
                            <div class="w-16 h-16 bg-accent/10 rounded-full flex items-center justify-center mx-auto mb-3">
                                <svg class="w-8 h-8 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"/>
                                </svg>
                            </div>
                            <h3 class="font-semibold text-text-primary">Distributed Teams</h3>
                        </div>
                    </div>
                </div>

                <!-- Additional Features -->
                <!-- Additional Features -->
                <div class="bg-white rounded-2xl p-8 md:p-10 mb-12 border-2 border-gray-200">
                    <h2 class="text-2xl md:text-3xl font-bold mb-6 text-center text-text-primary">Additional Features</h2>

                    <div class="grid md:grid-cols-2 gap-4 max-w-3xl mx-auto">
                        <div class="flex items-center gap-3">
                            <svg class="w-5 h-5 text-accent flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                            </svg>
                            <span class="text-text-primary font-medium">Local & international calling support</span>
                        </div>
                        <div class="flex items-center gap-3">
                            <svg class="w-5 h-5 text-accent flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                            </svg>
                            <span class="text-text-primary font-medium">Call analytics & reporting</span>
                        </div>
                        <div class="flex items-center gap-3">
                            <svg class="w-5 h-5 text-accent flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                            </svg>
                            <span class="text-text-primary font-medium">Voicemail to email</span>
                        </div>
                        <div class="flex items-center gap-3">
                            <svg class="w-5 h-5 text-accent flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                            </svg>
                            <span class="text-text-primary font-medium">Conference calling</span>
                        </div>
                        <div class="flex items-center gap-3">
                            <svg class="w-5 h-5 text-accent flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                            </svg>
                            <span class="text-text-primary font-medium">Music on hold</span>
                        </div>
                        <div class="flex items-center gap-3">
                            <svg class="w-5 h-5 text-accent flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                            </svg>
                            <span class="text-text-primary font-medium">24/7 local support</span>
                        </div>
                    </div>
                </div>

                <!-- Single CTA Button -->
                <div class="text-center">
                    <a href="/contact" class="inline-block bg-accent hover:bg-accent-hover text-white font-semibold px-10 py-4 rounded-lg transition-all hover:shadow-xl hover:scale-105 text-lg">
                        Talk to Business Team
                    </a>
                    <p class="text-text-secondary mt-3 text-sm">
                        Let's discuss your call center needs and find the perfect solution.
                    </p>
                </div>

            </div>
        </section>

    </main>
    <Footer />
</Layout>