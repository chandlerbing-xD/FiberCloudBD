---
// Navigation component with logo and better visual separation
---

<nav class="bg-gradient-to-b from-white to-bg-primary border-b border-gray-300 sticky top-0 z-50 backdrop-blur-sm bg-opacity-95">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-20">

            <!-- Left Side: Logo + Menu Items -->
            <div class="flex items-center space-x-12">
                <!-- Logo -->
                <a href="/" class="flex items-center group flex-shrink-0">
                    <img src="/logo.png" alt="FiberCloudBD Logo" class="h-12 w-auto transition-transform group-hover:scale-105" />
                </a>

                <!-- Desktop Navigation Menu -->
                <div class="hidden lg:flex items-center space-x-8">
                    <a href="/" class="text-text-primary hover:text-accent font-semibold text-[15px] transition-colors relative group">
                        Home
                        <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-accent transition-all group-hover:w-full"></span>
                    </a>

                    <a href="/packages" class="text-text-primary hover:text-accent font-semibold text-[15px] transition-colors relative group">
                        Internet Packages
                        <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-accent transition-all group-hover:w-full"></span>
                    </a>

                    <a href="/VPS" class="text-text-primary hover:text-accent font-semibold text-[15px] transition-colors relative group">
                        VPS
                        <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-accent transition-all group-hover:w-full"></span>
                    </a>

                    <!-- Solutions Dropdown -->
                    <div class="relative group">
                        <button class="text-text-primary hover:text-accent font-semibold text-[15px] transition-colors flex items-center gap-1.5 relative">
                            Solutions
                            <svg class="w-4 h-4 transition-transform group-hover:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                            </svg>
                            <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-accent transition-all group-hover:w-full"></span>
                        </button>

                        <!-- Dropdown Menu -->
                        <div class="absolute left-0 mt-3 w-72 bg-white rounded-xl shadow-xl border border-gray-200 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 transform group-hover:translate-y-0 translate-y-2">
                            <div class="py-3">
                                <a href="/call-center" class="block px-5 py-3.5 text-text-primary hover:bg-bg-secondary transition-colors group/item">
                                    <div class="font-semibold text-[15px] group-hover/item:text-accent transition-colors">Call Center & Cloud PBX</div>
                                    <div class="text-sm text-text-secondary mt-0.5">Voice infrastructure solutions</div>
                                </a>

                                <a href="/business-email" class="block px-5 py-3.5 text-text-primary hover:bg-bg-secondary transition-colors group/item">
                                    <div class="font-semibold text-[15px] group-hover/item:text-accent transition-colors">Business Email</div>
                                    <div class="text-sm text-text-secondary mt-0.5">Professional email hosting</div>
                                </a>

                                <a href="/cloud-storage" class="block px-5 py-3.5 text-text-primary hover:bg-bg-secondary transition-colors group/item">
                                    <div class="font-semibold text-[15px] group-hover/item:text-accent transition-colors">Cloud Storage</div>
                                    <div class="text-sm text-text-secondary mt-0.5">Secure local storage</div>
                                </a>
                            </div>
                        </div>
                    </div>

                    <a href="/others" class="text-text-primary hover:text-accent font-semibold text-[15px] transition-colors relative group">
                        Others
                        <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-accent transition-all group-hover:w-full"></span>
                    </a>

                    <a href="/about" class="text-text-primary hover:text-accent font-semibold text-[15px] transition-colors relative group">
                        About Us
                        <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-accent transition-all group-hover:w-full"></span>
                    </a>
                </div>
            </div>

            <!-- Right Side: CTA Button -->
            <div class="hidden lg:block">
                <a href="/contact" class="bg-accent hover:bg-accent-hover text-white font-semibold px-7 py-3 rounded-lg transition-all hover:shadow-lg hover:scale-105">
                    Contact Us
                </a>
            </div>

            <!-- Mobile Menu Button -->
            <div class="lg:hidden">
                <button id="mobile-menu-button" class="text-text-primary hover:text-accent p-2">
                    <svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                    </svg>
                </button>
            </div>
        </div>
    </div>

    <!-- Mobile Menu -->
    <div id="mobile-menu" class="hidden lg:hidden border-t border-gray-300 bg-white">
        <div class="px-4 py-5 space-y-1">
            <a href="/" class="block text-text-primary hover:text-accent hover:bg-bg-secondary font-semibold py-3 px-4 rounded-lg transition-colors">
                Home
            </a>

            <a href="/packages" class="block text-text-primary hover:text-accent hover:bg-bg-secondary font-semibold py-3 px-4 rounded-lg transition-colors">
                Internet Packages
            </a>

            <a href="/vps" class="block text-text-primary hover:text-accent hover:bg-bg-secondary font-semibold py-3 px-4 rounded-lg transition-colors">
                VPS
            </a>

            <!-- Mobile Solutions Submenu -->
            <div>
                <button id="mobile-solutions-toggle" class="w-full text-left text-text-primary hover:text-accent hover:bg-bg-secondary font-semibold py-3 px-4 rounded-lg transition-colors flex items-center justify-between">
                    Solutions
                    <svg class="w-5 h-5 transition-transform" id="mobile-solutions-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                    </svg>
                </button>

                <div id="mobile-solutions-menu" class="hidden pl-4 mt-1 space-y-1">
                    <a href="/call-center" class="block text-text-secondary hover:text-accent hover:bg-bg-secondary py-3 px-4 rounded-lg transition-colors font-medium">
                        Call Center & Cloud PBX
                    </a>
                    <a href="/business-email" class="block text-text-secondary hover:text-accent hover:bg-bg-secondary py-3 px-4 rounded-lg transition-colors font-medium">
                        Business Email
                    </a>
                    <a href="/cloud-storage" class="block text-text-secondary hover:text-accent hover:bg-bg-secondary py-3 px-4 rounded-lg transition-colors font-medium">
                        Cloud Storage
                    </a>
                </div>
            </div>

            <a href="/others" class="block text-text-primary hover:text-accent hover:bg-bg-secondary font-semibold py-3 px-4 rounded-lg transition-colors">
                Others
            </a>

            <a href="/about" class="block text-text-primary hover:text-accent hover:bg-bg-secondary font-semibold py-3 px-4 rounded-lg transition-colors">
                About Us
            </a>

            <!-- Mobile CTA -->
            <a href="/contact" class="block bg-accent hover:bg-accent-hover text-white font-semibold px-6 py-3.5 rounded-lg text-center transition-all hover:shadow-lg mt-4">
                Contact Us
            </a>
        </div>
    </div>
</nav>

<script>
    // Mobile menu toggle
    const mobileMenuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');

    mobileMenuButton?.addEventListener('click', () => {
        mobileMenu?.classList.toggle('hidden');
    });

    // Mobile solutions submenu toggle
    const solutionsToggle = document.getElementById('mobile-solutions-toggle');
    const solutionsMenu = document.getElementById('mobile-solutions-menu');
    const solutionsIcon = document.getElementById('mobile-solutions-icon');

    solutionsToggle?.addEventListener('click', () => {
        solutionsMenu?.classList.toggle('hidden');
        solutionsIcon?.classList.toggle('rotate-180');
    });
</script>